<p id="notice"><%= notice %></p>

<h1>Vendors</h1>
<h3>Results: <%= @vendors.count %></h3>

<%= render "search_box" %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vendors.each do |vendor| %>
      <tr>
        <td><%= highlight (link_to vendor.name, vendor), params[:keywords] %></td>
        <td><%= vendor.address %></td>
        <td><%= highlight vendor.description, params[:keywords] %></td>
        <td><%= link_to 'Edit', edit_vendor_path(vendor) %></td>
        <td><%= link_to 'Destroy', vendor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

